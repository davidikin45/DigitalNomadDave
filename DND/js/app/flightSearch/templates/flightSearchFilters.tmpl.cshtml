@model DND.Core.ViewModels.FlightSearchClientRequestForm
@{
    var flightSearch = Html.Angular().ModelFor("vm.flightSearch");
}

<div class="modal-header">
    @*<button type="button" class="close" ng-click="$dismiss()"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>*@
    <h3 class="modal-title">Filters</h3>
</div>

<div class="modal-body">

    <div class="row">
        <div class="col-12">
            <label class="col-form-label">Price Per Adult</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.PriceFilterPerAdultMin)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.PriceFilterPerAdultMax)" rz-slider-options="vm.optionsPrice"></rzslider>
        </div>
        <div class="col-12">
            <label class="col-form-label">Outbound Departure Time</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.OutboundDepartureTimeFrom)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.OutboundDepartureTimeTo)" rz-slider-options="vm.optionsTimeOutboundDeparture"></rzslider>

        </div>
        <div class="col-12">
            <label class="col-form-label">Outbound Arrival Time</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.OutboundArrivalTimeFrom)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.OutboundArrivalTimeTo)" rz-slider-options="vm.optionsTimeOutboundArrival"></rzslider>
        </div>
        <div class="col-12">
            <label class="col-form-label">Outbound Flight Duration</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.OutboundDurationMin)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.OutboundDurationMax)" rz-slider-options="vm.optionsTimeOutboundArrival"></rzslider>
        </div>
        <div class="col-12" ng-hide="!@flightSearch.ExpressionFor(x => x.ReturnFlight)">
            <label class="col-form-label">Return Departure Time</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.InboundDepartureTimeFrom)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.InboundDepartureTimeTo)" rz-slider-options="vm.optionsTimeInboundDeparture"></rzslider>
        </div>
        <div class="col-12" ng-hide="!@flightSearch.ExpressionFor(x => x.ReturnFlight)">
            <label class="col-form-label">Return Arrival Time</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.InboundArrivalTimeFrom)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.InboundArrivalTimeTo)" rz-slider-options="vm.optionsTimeInboundArrival"></rzslider>
        </div>
        <div class="col-12" ng-hide="!@flightSearch.ExpressionFor(x => x.ReturnFlight)">
            <label class="col-form-label">Return Flight Duration</label>
            <rzslider rz-slider-model="@flightSearch.ExpressionFor(fs => fs.InboundDurationMin)" rz-slider-high="@flightSearch.ExpressionFor(fs => fs.InboundDurationMax)" rz-slider-options="vm.optionsTimeInboundArrival"></rzslider>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" ng-click="vm.resetFilters()" class="btn btn-primary">Reset</button>
    <button type="button" ng-click="$dismiss(); vm.closeFilterModal();" class="btn btn-primary">Done</button>
</div>
