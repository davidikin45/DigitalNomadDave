<div class="card">
	<div class="card-header">
		<h3 class="card-header">
			<i class="fa fa-pie-chart fa-fw"></i> New Customers
		</h3>
	</div>
	<table ng-hide="vm.isLoading || vm.customers.length == 0"
		   class="card table-striped table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Work E-mail</th>
				<th>Date Acquired</th>
			</tr>
		</thead>
		<tbody>
			<tr ng-repeat="customer in vm.customers">
				<td>
					{{customer.Name}}
				</td>
				<td>
					{{customer.WorkEmail}}
				</td>
				<td>
					{{customer.CreateDate | parseDate | date: 'shortDate'}}
				</td>
			</tr>
		</tbody>
	</table>
	<div class="card-body" ng-show="vm.isLoading">
		Loading...
	</div>
	<div class="card-body" ng-show="!vm.isLoading && vm.customers.length == 0">
		There are no customers on the report.
	</div>
</div>
